<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="maidan_theme" parent="Theme.AppCompat.Light.NoActionBar" />


    <style name="radius">
        <item name="android:background">@drawable/radius</item>
    </style>


    <style name="Recycler" parent="Theme.AppCompat">
        <item name="android:background">@drawable/category_btn_state</item>
        <item name="android:shadowColor">#60F282</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">Monteserrat</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button" parent="Theme.AppCompat">
        <item name="android:background">@drawable/gradient</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="book_btn" parent="Theme.AppCompat">
        <item name="android:background">@drawable/book_gradient</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">Raleway</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="pay_btn" parent="Theme.AppCompat">
        <item name="android:background">@drawable/book_gradient</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">Raleway</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#42DE95</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="DatePickerThemeSignup">
        <item name="colorAccent">#42DE95</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:color">@color/black</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="login_btn_fb">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/facebook_btn</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="login_btn_google">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:background">@drawable/google_btn</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="email_password_login">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:background">@drawable/radius</item>
    </style>

    <style name="password_login">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:background">@drawable/radius</item>
    </style>

    <style name="curves">
        <item name="android:background">@drawable/venue_card_radius</item>
    </style>

    <style name="bookingSchedule">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
